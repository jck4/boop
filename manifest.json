{
  "name": "Boop",
  "version": "0.0.3",
  "manifest_version": 3,
  "description": "This is a browser extension for setting up end-to-end encrypted messages for online chat applications",
  "default_locale": "en",

  "permissions": ["storage", "activeTab", "scripting"],


  "action": {
    "default_title": "Boop Encrypted",
    "default_popup": "src/popup/popup.html"
  },
  
  // "background": {
  //   "service_worker": "src/background.js"
  // },

  "commands": {

    "_execute_browser_action": {
      "suggested_key": {
        "mac": "MacCtrl+Shift+F",
        "default": "Ctrl+Shift+F"
      }
    }
  }

}